<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addons>
    <addon id="plugin.video.pinoytv"
           name="Pinoy TV"
           version="0.0.15"
           provider-name="todits.xbmc">
      <requires>
        <import addon="xbmc.python" version="2.1.0"/>
        <import addon="script.module.pyamf" version="0.6.1"/>
        <import addon="script.module.parsedom" version="0.9.1"/>
      </requires>
      <extension point="xbmc.python.pluginsource"
                library="default.py">
            <provides>video</provides>
      </extension>
      <extension point="xbmc.addon.metadata">
        <summary>Pinoy TV Channels</summary>
        <description>This is still in Alpha. Pinoy TV Channels.</description>
        <platform>all</platform>
      </extension>
    </addon>
    
    <addon id="plugin.video.tfctv"
           name="TFC.tv"
           version="0.0.39"
           provider-name="todits.xbmc">
      <requires>
        <import addon="xbmc.python" version="2.1.0"/>
        <import addon="script.module.parsedom" version="0.9.1"/>
      </requires>
      <extension point="xbmc.python.pluginsource"
                library="default.py">
            <provides>video</provides>
      </extension>
      <extension point="xbmc.addon.metadata">
        <summary>TFC.tv</summary>
        <description>This is still in Alpha. Subscription to TFC.tv is required.</description>
        <platform>all</platform>
      </extension>
    </addon>
    
    <addon id="repository.todits.xbmc.addons" name="todits.xbmc Add-ons" version="0.0.3" provider-name="todits.xbmc">
        <extension point="xbmc.addon.repository" name="todits.xbmc Add-ons">
            <info compressed="false">https://github.com/todits-xbmc/todits-xbmc-tv/raw/master/addons.xml</info>
            <checksum>https://github.com/todits-xbmc/todits-xbmc-tv/raw/master/addons.xml.md5</checksum>
            <datadir zip="true">https://github.com/todits-xbmc/todits-xbmc-tv/raw/master/downloads</datadir>
        </extension>
        <extension point="xbmc.addon.metadata">
            <summary>XBMC Plugins</summary>
            <description>Install XBMC Plugins</description>
            <disclaimer>No warranty here.</disclaimer>
            <language>en</language>
            <platform>all</platform>
        </extension>
    </addon>
</addons>
